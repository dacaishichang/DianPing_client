<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAdressActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/address_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_u"
            android:contentDescription="@null"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/address_title"
            android:textSize="@dimen/texisize_18sp"
            android:padding="@dimen/padding_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:background="@color/normal_orange_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mini_block_item_normal"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10dp"
            android:text="用户"
            android:textSize="25dp"
            android:hint="@string/register_phone_default"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/address_usermane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mini_block_item_normal"
        android:orientation="horizontal" >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10dp"
            android:text="电话"
            android:textSize="25dp"
            android:hint="@string/register_phone_default"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/address_tel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mini_block_item_normal"
        android:orientation="horizontal" >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10dp"
            android:text="省份"
            android:textSize="25dp"
            android:hint="@string/register_phone_default"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/address_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/mini_block_item_normal"
        android:orientation="horizontal" >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10dp"
            android:text="地址"
            android:textSize="25dp"
            android:hint="@string/register_phone_default"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/address_aname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/save_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10dp"
        android:background="@drawable/my_btn_bg_color"
        android:padding="@dimen/padding_5dp"
        android:text="修改信息"
        android:textColor="@color/white"
        android:textSize="@dimen/texisize_18sp"
        />
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10dp"
        android:background="@drawable/my_btn_bg_color"
        android:padding="@dimen/padding_5dp"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="@dimen/texisize_18sp"
        />
    <Button
        android:id="@+id/change_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10dp"
        android:background="@drawable/my_btn_bg_color"
        android:padding="@dimen/padding_5dp"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/texisize_18sp"
        />
    <LinearLayout
        android:id="@+id/change_layout"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/special"
        android:visibility="gone"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/mini_block_item_normal"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/padding_10dp"
                android:text="旧密码"
                android:textSize="25dp"

                android:hint="@string/register_phone_default"
                android:inputType="phone"
                android:singleLine="true" />

            <EditText
                android:id="@+id/old_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/mini_block_item_normal"
            android:orientation="horizontal" >

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/padding_10dp"
                android:text="新密码"
                android:textSize="25dp"
                android:hint="@string/register_phone_default"
                android:inputType="phone"
                android:singleLine="true" />

            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="0dp"
                android:inputType="textPassword"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"/>

        </LinearLayout>
        <Button
            android:id="@+id/save_change_pwd_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/my_btn_bg_color"
            android:padding="@dimen/padding_5dp"
            android:text="修改确认"
            android:textColor="@color/white"
            android:textSize="@dimen/texisize_18sp"
            />
    </LinearLayout>
</LinearLayout>